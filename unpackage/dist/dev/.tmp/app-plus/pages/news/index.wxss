  position: relative;
}
.input-search .bg {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 2;
}
.input-search .search {
    color: #666666;
    margin: 0;
    height: 68rpx;
    background: #E6E6E6;
    border-radius: 40rpx;
    padding: 0 62rpx;
    font-size: 32rpx;
    line-height: 68rpx;
}
.input-search .ic {
    position: absolute;
    width: 30rpx;
    height: 36rpx;
    z-index: 1;
    left: 48rpx;
    top: 46rpx;
}
