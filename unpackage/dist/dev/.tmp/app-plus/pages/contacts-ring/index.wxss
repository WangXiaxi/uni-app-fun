.iphone-box {
  position: relative;
  text-align: center;
  color: #FFFFFF;
  padding-top: 140rpx;
}
.iphone-box .o {
    font-size: 72rpx;
}
.iphone-box .des {
    font-size: 32rpx;
    margin-top: 20rpx;
}
.iphone-box .dex {
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #F2F2F2;
}
.bg {
  position: absolute;
  height: 100vh;
  width: 100vw;
  top: 0;
  left: 0;
}
.btn-red {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  background: #ea1212;
  box-shadow: 0 0 20rpx 0 rgba(234, 18, 18, 0.5);
  margin: 0 146rpx;
  position: absolute;
  bottom: 40rpx;
  z-index: 2;
  left: 50%;
  margin-left: -60rpx;
  border-radius: 50%;
}
.btn-red .phone_main {
    width: 120rpx;
    height: 240rpx;
    position: relative;
    top: 0;
    -webkit-transition: all 0.3s;
    transition: all 0.3s;
}
.btn-red .phone_main.act {
      top: -120rpx;
}

